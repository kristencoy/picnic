<% layout('layouts/boilerplate') %>
<div id="map" style="width: 100%; height: 400px"></div>
<h1>All Picnic Sites</h1>
<div class="mt-3 mb-3">
  <a class="btn btn-success" href="/picnics/new">Add A New Picnic Site</a>
</div>
<% for(let picnic of picnics) { %>
<div class="card" mb-3>
  <div class="row">
    <div class="col-md-4">
      <% if(picnic.images.length) {%>
      <img class="img-fluid" alt="" src="<%= picnic.images[0].url %>" />
      <% } else {%>
      <img
        class="img-fluid"
        alt=""
        src="https://images.unsplash.com/photo-1578359968130-76b59bb5af13?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1374&q=80"
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= picnic.title %></h5>
        <p class="card-text"><%= picnic.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= picnic.location %></small>
        </p>
        <a class="btn btn-primary" href="/picnics/<%= picnic._id %>"
          >View <%= picnic.title %></a
        >
      </div>
    </div>
  </div>
</div>
<!-- <a href="/picnics/<%= picnic._id %>"><%= picnic.title %></a> -->
<% } %>
